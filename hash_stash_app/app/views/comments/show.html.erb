<% content_for :title do %>
  Hash Comments
<% end %>
<div class="comments-container">
  <div class="row">
    <div class="small-12 columns">
      <h2>Comment...</h2>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <p><%= @comment.content %></p>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <form action="/comments/<%=@comment.id%>" method="post">
        <label for="content">Reply</label>
        <textarea name="content" id="content" cols="30" rows="10"></textarea>
        <input type="submit" value="Reply" class="button small">
      </form>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h3><small>Replies</small></h3>
    </div>
    <div class="small-12 columns">
      <% @replies.each do |reply| %>
        <div class="panel">
          <%= reply.content %>
        </div>
      <% end %>
    </div>
  </div>
</div>
